<%= image_tag leader.photo_src, alt: "Image of #{leader.name.strip}" %>
<h3 style="font-size:17px;padding: 0;margin: 7px 3px 0 3px;color:#222222 !important"><%= leader.name.strip %></h3>
<h4 style="font-size:15px;padding: 0;margin: 3px;color: #555555 !important"><%= leader.title.strip %></h4>

<% unless leader.district_residence.blank? %>
  <p style="margin: 7px 3px">
  <b>District</b>
  <br />
  <%= leader.district_residence %>
  </p>
<% end %>

<% unless leader.spouse.blank? %>
  <p style="margin: 7px 3px">
  <b>Spouse</b>
  <br />
  <%= leader.spouse %>
  </p>
<% end %>

<p style="margin: 7px 3px">
  <%= glyph_link_to('329_web_browser', leader.website, "Website") %>
  <%= glyph_link_to('309_comments', leader.webform, "Contact") %>
  <%= glyph_link_to('399_e-mail', 'mailto:'+leader.email, "Email") unless leader.email.blank? %>
  <%= glyph_link_to('391_twitter_t', leader.twitter, "Twitter") %>
  <%= glyph_link_to('390_facebook', leader.facebook, "Facebook") %>
</p>
